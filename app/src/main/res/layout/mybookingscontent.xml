<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".BookingsTab">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7sp"
        app:cardUseCompatPadding="true">
        <ImageView
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:src="@drawable/sample"
            android:id="@+id/img1"
            android:padding="8sp"
            android:elevation="4dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130sp"
            android:id="@+id/title1"
            android:padding="8sp"
            android:text="Event Title"
            style="@style/cardTitle" />

        <TextView
            android:id="@+id/date"
            style="@style/buttonTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="60sp"
            android:layout_marginLeft="135sp"
            android:backgroundTint="#4b8e4b"
            android:text="27 October 2023"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/venue"
            style="@style/buttonTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="135sp"
            android:layout_marginTop="90sp"
            android:backgroundTint="#4b8e4b"
            android:text="Ramdas Pai"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>

</LinearLayout>